<div class="form-header">
  <div class="container">
    <div class='row'>
      <div class='col-sm-6 col-sm-offset-3'>
        <%= form_for :session, url: sign_in_path do |f| %>
    
          <div class='form-group'>
            <%= f.label User.human_attribute_name(:email) %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
    
          <div class='form-group'>
            <%= f.label User.human_attribute_name(:password) %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
    
          <div>
            <%= f.submit t('.sign_in', default: "Sign In"), class: 'btn btn-success' %>
          </div>
        <% end %>
          <br>
          <br>
          <p><%= t('.new_user', default: "New user?")%> <%= link_to t('.sign_up_now', default: "Sign up now!"), sign_up_path %></p>
      </div>
    </div>
  </div>
</div>
