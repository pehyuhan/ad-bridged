<div class="form-header">
  <div class="container">
    <div class='row'>
      <div class='col-sm-6 col-sm-offset-3'>
        
        <% provide(:title, "Edit user") %>
            <h1><%= t('.update_profile', default: "Update your profile") %></h1>

            <br>
            <br>

                <%= form_for(@user) do |f| %>
                  <%#= render 'shared/error_messages' %>
                 
                <div class='form-group'>
                  <%= f.label User.human_attribute_name(:name) %>
                  <%= f.text_field :name, class: 'form-control', :readonly => true%>
                </div>
                
                <div class='form-group'>
                  <%= f.label User.human_attribute_name(:email) %>
                  <%= f.text_field :email, class: 'form-control', :readonly => true %>
                </div>
                
                <div class='form-group'>
                  <%= f.label User.human_attribute_name(:password) %>
                  <%= f.text_field :password, class: 'form-control' %>
                </div>                

                <div class='form-group'>
                  <%= f.label User.human_attribute_name(:password_confirmation) %>
                  <%= f.text_field :password_confirmation, class: 'form-control' %>
                </div>
            
                  <%= f.submit t('.save_changes', default: "Save changes"), class: "btn btn-large btn-primary" %>
                <% end %>
            
                <br>
                <br>
            
                <%= gravatar_for @user %>
                <a href="http://gravatar.com/emails" target="_blank"> <%= t('.change', default: "change") %></a>
                
                <br>
                <br>
                <br>
              
              </div>
            </div>
          </div>
        </div>