<!-- Header -->
    <a name="about"></a>
    <div class="intro-header">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1><%= t('posts.index.ad_bridged', default: "Ad_Bridged") %></h1>
                        <h3><%= t('.tag_line', default: "Bridging ads across borders") %></h3>
                        <hr class="intro-divider">
                        <ul class="list-inline intro-social-buttons">
                            <li>
                                <a href="https://www.facebook.com/peh.yuhan" class="btn btn-default btn-lg"><i class="fa fa-facebook fa-fw"></i> <span class="network-name">Facebook</span></a>
                            </li>
                            <li>
                                <a href="https://github.com/pehyuhan/ad-bridged" class="btn btn-default btn-lg"><i class="fa fa-github fa-fw"></i> <span class="network-name">Github</span></a>
                            </li>
                            <li>
                                <a href="https://www.linkedin.com/in/yuhan-peh-5282b1b9" class="btn btn-default btn-lg"><i class="fa fa-linkedin fa-fw"></i> <span class="network-name">Linkedin</span></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.intro-header -->

    <!-- Page Content -->
    <div class="container">

        <!-- Page Header -->
        <div class="row">
            <div class="col-lg-12">
                <% if current_user %>
                    <br>
                    <div class="new-post col-lg-12"><h4><%= link_to(icon('fa fa-plus-square-o'), user_path(current_user)) %> <%= link_to(t('.new_post', default: "New Post"), new_post_path) %></h4></div>
                <% end %>
                <h1 class="page-header"><%= t('.ad_platforms', default: "Advertising Platforms") %></h1>
            </div>
        </div>
        <!-- /.row -->

    <!-- Projects Row -->
    <div class="row">
        <% @posts.each do |post| %>
            <div class="col-md-6 portfolio-item">
                <div class="col-sd-6 portfolio-item">
                    <h3>
                        <a href="#"><%= link_to post.company_name, post_path(post) %></a>
                    </h3>
                </div>
                
                <a href="#">
                    <img class="img-responsive" <%= image_tag post.image_url %>
                </a>
                
                <div class="col-sd-6 portfolio-item text-right">
                    <span class='created_at'><%= link_to time_ago_in_words(post.created_at) + t('.ago', default: " ago"), post_path(post) %></span>
                    &nbsp;
                    <% if current_user %>
                        <%= link_to icon('trash-o'), post_path(post), method: :delete, data: { confirm: 'Are you sure you want to delete this Post?'} %>
                    <% end %>
                </div>

                <div class="col-sd-6 portfolio-item">
                    <%= Post.human_attribute_name(:platform_type) %>：
                    <%= platform_type_to_s(post.platform_type) %>
                </div>
                
                <div class="col-sd-6 portfolio-item">
                    <%= Post.human_attribute_name(:ad_type) %>：
                    <%= ad_type_to_s(post.ad_type) %>
                </div>
                <div class="col-sd-6 portfolio-item">
                    <%= icon('map-marker') %>  <%= post.country_code %>
                </div>
                <div class="col-sd-6 portfolio-item">
                    <%= Post.human_attribute_name(:number_of_enquiries) %>：
                    <%= post.number_of_enquiries %> <%= t "posts.index.enquiries" %>
                </div>
                <br>
                <div class="descriptions">
                <div class="col-sd-6 portfolio-item">
                    <%= Post.human_attribute_name(:descriptions) %>：
                    <br>
                    <%= post.descriptions %>
                </div>
                </div>
                <br>
                <div class="col-sd-6 portfolio-item">
                    <%=raw tag_links(post.all_tags)%>
                </div>
                <hr>
            </div>
                <% end %>
        </div>
    </div>
        <!-- /.row -->

        <hr>

        <!-- Pagination -->
        <div class="row text-center">
            <div class="col-lg-12">
                <ul class="pagination">
                    <%= paginate @posts %>
                </ul>
            </div>
        </div>
        <!-- /.row -->

        <hr>

