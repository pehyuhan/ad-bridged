<div class="form-header">
  <div class="container">
    <div class='row'>
      <div class='col-sm-8 col-sm-offset-2'>
        <div class='panel panel-default'>
          <div class='panel-heading'>
            <div class='row'>
              <div class='col-sm-8'>
                <%= current_user.name %>
              </div>
              <div class='col-sm-12 text-right'>
                <span class='created_at'><%= link_to time_ago_in_words(@post.created_at), post_path(@post) %></span>
                &nbsp;
                <%= link_to icon('trash-o'), post_path(@post), method: :delete, data: { confirm: 'Are you sure you want to delete this post?'} %>
              </div>
            </div>
          </div>
          <div class='panel-body text-center'>
            <div><%= image_tag @post.image_url %></div>
          </div>
          <div class='panel-footer'>
            <div class='post-company_name'><%= @post.company_name %></div>
            <div class='post-location'><%= icon('map-marker') %> <%= country_name(@post.country_code) %></div>
            <div class='post-ad_type'><%= @post.ad_type %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
